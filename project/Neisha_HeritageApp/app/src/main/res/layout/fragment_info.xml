<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="N E I S H A"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:textSize="30sp"
        android:fontFamily="times new roman"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:gravity="center"/>

    <TextView
        android:id="@+id/app_def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="World Heritages"
        android:fontFamily="times new roman"
        android:layout_marginBottom="20dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:gravity="center"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info"
        android:textSize="30dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginTop="10dp"
        android:fontFamily="times new roman" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" >> Discover the natural and cultural World heritage sites."
        android:fontFamily="times new roman"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" >> The app data and the heritage pictures are available without network. "
        android:fontFamily="times new roman"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" >> Information about each heritage site. "
        android:fontFamily="times new roman"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" >> Features: "
        android:fontFamily="times new roman"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:textColor="@color/purple_500" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="          • List by State party"
        android:fontFamily="times new roman"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" • List by inscription year to Unesco heritage list"
        android:fontFamily="times new roman"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/purple_200" />




</LinearLayout>